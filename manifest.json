{
  "name": "Print-Friendly DigitalOcean Articles",
  "description": "An extension for showing a more print-friendly version of the DigitalOcean Community Articles",
  "version": "0.1",
  "manifest_version": 2,
  "permissions" : [
    "declarativeContent",
    "activeTab"
  ],
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Print-Friendly Articles",
    "default_popup": "popup.html"
  }
}
